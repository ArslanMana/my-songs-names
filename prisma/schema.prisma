datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  password  String
  songs     Favorite[] // 1-to-many relation
}

model Favorite {
  id        String   @id @default(cuid())
  songName  String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
